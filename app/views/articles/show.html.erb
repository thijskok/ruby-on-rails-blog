<% content_for :title do %> Blog | <%= @article.title %> <% end %>

<h1 class="title"><%= @article.title %></h1>

<div class="content">
  <p><%= @article.body %></p>
  <p><em><%= @article.user.email %></em></p>
</div>

<% if user_signed_in? %>
  <div class="buttons">
      <%= link_to "Edit", edit_article_path(@article), class: "button" %>
      <%= link_to "Destroy", article_path(@article), class: "button is-danger", data: {
                    turbo_method: :delete,
                    turbo_confirm: "Are you sure?"
                  } %>
  </div>
<% end %>

<%= link_to "Back to Index", articles_path() %>

<hr/>

<h2 class="title is-4">Comments</h2>

<%= render @article.comments %>

<% if user_signed_in? %>
  <%= render "comments/form", article: @article %>
<% end %>